<section id="Scan_a_Virtual_Machine" remap="TID_44457">
	<title>Scan a Virtual Machine</title>
	<para>
		Request:
	</para>
	<screen>POST /api/vms/1922</screen>
	<programlisting>{
  "action": "scan"
}</programlisting>
	<para>
		Response:
	</para>
	<programlisting>{
  "success": true,
  "message": "VM id:1922 name:'aab_test_vm' scanning",
  "task_id": 618,
  "task_href": "https://hostname/api/tasks/618",
  "href": "https://hostname/api/vms/1922"
}</programlisting>
	<simpara>
		Optionally, wait for the task to complete as follows:
	</simpara>
	<screen>GET /api/tasks/618</screen>
	<para>
		Response:
	</para>
	<programlisting>{
  "href": "https://hostname/api/tasks/618",
  "id": 618,
  "name": "VM id:1922 name:'aab_test_vm' scanning",
  "state": "Finished",
  "status": "Ok",
  "message": "Task completed successfully",
  "userid": "admin",
  "created_on": "2015-05-05T19:37:32Z",
  "updated_on": "2015-05-05T19:37:38Z"
}</programlisting>
</section>