<section id="Create_a_Provider_with_Compound_Credentials" remap="TID_44432">
	<title>Create a Provider with Compound Credentials</title>
	<para>
		Request:
	</para>
	<screen>POST /api/providers</screen>
	<programlisting>{
  "type"      : "EmsRedhat",
  "name"      : "rhevm102",
  "hostname"  : "rhevm102",
  "ipaddress" : "100.200.300.102",
  "credentials" : [
    {
      "userid"    : "default_userid",
      "password"  : "default_password"
    },
    {
      "userid"    : "metrics_userid",
      "password"  : "metrics_password",
      "auth_type" : "metrics"
    }
  ]
}</programlisting>
